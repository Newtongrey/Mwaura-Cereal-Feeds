<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feeds"
    tools:context=".SignUpActivity">
    <TextView
        android:id="@+id/app_logo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Mwaura Cereal Feeds"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="60dp"
        android:textSize="25sp"
        android:fontFamily="@font/mmedium"
        android:textColor="#fff"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slogan"
        android:layout_below="@+id/app_logo"
        android:text="for your cereal feeds solution"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/mlight"
        android:layout_marginLeft="110dp"
        android:textColor="#fff"/>

    <EditText
        android:layout_marginTop="50dp"
        android:id="@+id/register_username_input"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/slogan"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="Name"
        android:inputType="text"
        android:drawableStart="@drawable/baseline_account_box_white_18dp"
        android:drawablePadding="5dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="12sp"
        />
    <EditText
        android:id="@+id/register_email_input"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/register_username_input"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawableStart="@drawable/baseline_email_white_18dp"
        android:drawablePadding="5dp"
        android:hint="Email "
        android:inputType="textEmailAddress"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="12sp"
        android:layout_marginTop="6dp"
        />


    <EditText
        android:id="@+id/register_phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/register_email_input"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:drawableStart="@drawable/baseline_phone_white_18dp"
        android:drawablePadding="5dp"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="12sp"
        android:layout_marginTop="6dp"
        />


    <EditText
        android:id="@+id/register_password_input"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/register_phone_number_input"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="6dp"
        android:hint="Password"
        android:drawableStart="@drawable/baseline_lock_white_18dp"
        android:drawablePadding="5dp"
        android:inputType="textPassword"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="12sp"
        />


    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/register_password_input"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="17dp"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:text="Create Account"
        android:textColor="@android:color/white"
        />

</RelativeLayout>